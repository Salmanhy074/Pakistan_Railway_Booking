<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">





    <TextView
        android:id="@+id/tv_seat_selection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Quota Seat"
        android:layout_marginVertical="30dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        tools:ignore="HardcodedText" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="HardcodedText">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Berth = B"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Seat = S"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>



        <!-- Layout for seat rows -->
        <GridLayout
            android:id="@+id/grid_seat_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="4"
            android:rowCount="5"
            android:textColor="@android:color/black"
            android:layout_gravity="center">


        </GridLayout>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue_to_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginVertical="20dp"
            android:padding="15dp"
            android:text="Continue"
            android:textColor="@android:color/white"
            app:backgroundTint="#26457C"
            tools:ignore="HardcodedText"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:text="Cancel"
            android:textColor="@android:color/white"
            app:backgroundTint="#26457C"
            tools:ignore="HardcodedText" />





    </LinearLayout>

</ScrollView>
